<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/root2_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <!--View while view is collapsed-->
        <RelativeLayout
            android:id="@+id/up_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!--Icon of floating widget -->
            <ImageView
                android:id="@+id/up_iv"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/open"
                tools:ignore="ContentDescription" />

            <!--Close button-->


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/up_iv"
                android:layout_marginLeft="85dp"
                android:layout_marginStart="85dp"
                android:layout_marginTop="80dp"
                android:background="#00d9d9d9" />

            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="@dimen/closeBoxWidth"
                android:layout_height="@dimen/closeBoxHeight"
                android:layout_marginLeft="110dp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/off"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/radioButton"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignEnd="@+id/close_btn"
                android:layout_alignRight="@+id/close_btn"
                android:layout_alignTop="@+id/close_btn"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="13dp" />

            <Button
                android:id="@+id/minimize"
                android:layout_width="@dimen/closeBoxWidth"
                android:layout_height="@dimen/closeBoxHeight"
                android:layout_marginLeft="95dp"
                android:layout_marginStart="95dp"
                android:layout_marginTop="20dp"
                android:background="@android:drawable/ic_lock_lock"

                tools:ignore="ContentDescription" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>