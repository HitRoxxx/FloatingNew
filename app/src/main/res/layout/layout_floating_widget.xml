<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/root_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <!--View while view is collapsed-->
        <RelativeLayout
            android:id="@+id/collapse_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!--Icon of floating widget -->
            <ImageView
                android:id="@+id/collapsed_iv"
                android:layout_width="@dimen/imageBoxWidth"
                android:layout_height="@dimen/imageBoxHeight"
                android:layout_marginTop="10dp"
                android:src="@drawable/down"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/up_btn"
                android:layout_width="@dimen/closeBoxWidth"
                android:layout_height="@dimen/closeBoxHeight"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:background="@drawable/off"
                tools:ignore="ContentDescription" />

            <!--Close button-->
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/root2_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <!--View while view is collapsed-->
        <RelativeLayout
            android:id="@+id/up_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:visibility="visible">

            <!--Icon of floating widget -->
            <ImageView
                android:id="@+id/up_iv"
                android:layout_width="@dimen/imageBoxWidth"
                android:layout_height="@dimen/imageBoxHeight"
                android:layout_marginTop="10dp"
                android:src="@drawable/up"
                tools:ignore="ContentDescription" />

            <!--Close button-->


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/up_iv"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:background="#00d9d9d9"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="@dimen/closeBoxWidth"
                android:layout_height="@dimen/closeBoxHeight"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:background="@drawable/off"
                tools:ignore="ContentDescription" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>